<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="ivanWinterIntern.clientSelectorPage.ClientSelectorActivity">

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/cardContainer"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true" />

    <TextView
        android:id="@+id/debugText1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@+id/debugText2"
        android:text="TextView"
        android:textColor="#FFFFFF" />

    <TextView
        android:id="@+id/debugText2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@+id/debugText3"
        android:text="TextView"
        android:textColor="#FFFFFF" />

    <TextView
        android:id="@+id/debugText3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:text="TextView"
        android:textColor="#FFFFFF" />

</RelativeLayout>